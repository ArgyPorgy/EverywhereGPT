{
  "manifest_version": 3,
  "name": "EverywhereGPT",
  "version": "1.0",
  "description": "A web extension to generate responses using the ChatGPT API.",
  "permissions": [
    "activeTab"
  ],
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["style.css"],
      "js": ["content_script.js"]
    }
  ]
}
